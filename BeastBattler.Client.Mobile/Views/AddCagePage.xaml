<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeastBattler.Client.Mobile.Views.AddCagePage"
             xmlns:viewmodel="clr-namespace:BeastBattler.Client.Mobile.ViewModels"
             x:DataType="viewmodel:AddCagePageViewModel"
             Shell.FlyoutBehavior="Disabled"
             Title="{Binding Title}">

    <VerticalStackLayout>
        <Entry Placeholder="Name" Text="{Binding Cage.Name}" />
        <Entry Placeholder="Capacity" Text="{Binding Cage.Capacity}"/>
        <Button Text="Submit" Command="{Binding AddCommand}" />
    </VerticalStackLayout>

</ContentPage>