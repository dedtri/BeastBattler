<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:TravelTime.Client.Mobile.Models"
             xmlns:viewmodel="clr-namespace:TravelTime.Client.Mobile.ViewModels"
             x:DataType="viewmodel:MyAccountPageViewModel"
             x:Class="TravelTime.Client.Mobile.Views.MyAccountPage"
             Title="{Binding Title}">

    <VerticalStackLayout Padding="20" Spacing="10">

        <!-- User Greeting -->
        <Frame BackgroundColor="#4A90E2" Padding="15" CornerRadius="15">
            <Label Text="{Binding User.Email, StringFormat='Hello {0}!'}"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>
        </Frame>

        <Label Text="Your Planned Trips"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center"
               Margin="10"/>

        <!-- Trip List -->
        <ScrollView>
            <CollectionView BackgroundColor="Transparent"
                            ItemsSource="{Binding User.Trips}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Trip">
                        <Frame BackgroundColor="White"
                               CornerRadius="12"
                               Padding="15"
                               Margin="10"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding Origin, StringFormat='ðŸ›« Origin: {0}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>
                                <Label Text="{Binding Destination, StringFormat='ðŸ›¬ Destination: {0}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>
                                <Label Text="{Binding StartDate, StringFormat='ðŸ“… Departure: {0:MMM dd, yyyy}'}"
                                       FontSize="14"
                                       TextColor="Gray"/>
                                <Label Text="{Binding EndDate, StringFormat='ðŸ“… Arrival: {0:MMM dd, yyyy}'}"
                                       FontSize="14"
                                       TextColor="Gray"/>
                                <Label Text="{Binding Notes}"
                                       FontSize="14"
                                       TextColor="Black"
                                       Margin="0,5,0,5"/>
                                <Label Text="{Binding CreatedAt, StringFormat='ðŸ•’ Booked: {0:MMM dd, yyyy}'}"
                                       FontSize="12"
                                       TextColor="DarkGray"/>

                                <Button Text="Show Route To Airport"
                                        BackgroundColor="#4A90E2"
                                        TextColor="White"
                                        Padding="10"
                                        CornerRadius="10"
                                        FontAttributes="Bold"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MyAccountPageViewModel}}, Path=ShowRouteCommand}"
                                        CommandParameter="{Binding .}"
                                        IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MyAccountPageViewModel}}, Path=ShowRouteCommand}">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroupList>
                                            <VisualStateGroup Name="CommonStates">
                                                <VisualState Name="Normal">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="#4A90E2"/>
                                                        <Setter Property="TextColor" Value="White"/>
                                                        <Setter Property="Text" Value="Show Route To Airport"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState Name="Disabled">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="Gray"/>
                                                        <Setter Property="TextColor" Value="LightGray"/>
                                                        <Setter Property="Text" Value="Loading..."/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateGroupList>
                                    </VisualStateManager.VisualStateGroups>
                                </Button>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>